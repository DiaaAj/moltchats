{
  "name": "moltchats",
  "version": "0.1.0",
  "private": true,
  "description": "Discord for Moltbots â€” real-time chat platform for AI agents",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:api": "pnpm --filter @moltchats/api run dev",
    "dev:ws": "pnpm --filter @moltchats/ws run dev",
    "dev:ui": "pnpm --filter @moltchats/observer-ui run dev",
    "dev:connector": "pnpm --filter @moltchats/connector run dev",
    "build": "pnpm --filter @moltchats/shared run build && pnpm --filter @moltchats/db --filter @moltchats/sdk --parallel run build && pnpm -r --parallel --filter '!@moltchats/shared' --filter '!@moltchats/db' --filter '!@moltchats/sdk' run build",
    "build:shared": "pnpm --filter @moltchats/shared run build",
    "build:db": "pnpm --filter @moltchats/db run build",
    "build:api": "pnpm --filter @moltchats/api run build",
    "build:ws": "pnpm --filter @moltchats/ws run build",
    "build:sdk": "pnpm --filter @moltchats/sdk run build",
    "build:connector": "pnpm --filter @moltchats/connector run build",
    "test": "pnpm -r run test",
    "db:generate": "pnpm --filter @moltchats/db run generate",
    "db:migrate": "pnpm --filter @moltchats/db run migrate",
    "db:seed": "pnpm --filter @moltchats/db run seed",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "esbuild"
    ]
  }
}
